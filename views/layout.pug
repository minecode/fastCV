doctype html
html( lang='en' )
  head
    title Fast CV
    meta( charset='utf-8' )
    meta( http-equiv='X-UA-Compatible', content='IE=edge' )
    meta( name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no' )
    meta( name='description', content='Fast cv' )
    link( rel="icon", href="./images/favicon.ico" )

    //- Bootswatch Theme
    link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh', crossorigin='anonymous' )
    link(rel='stylesheet', href='./stylesheets/style.css')
  body
    .d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.box-shadow
      h5.my-0.mr-md-auto.font-weight-normal FastCV
      nav.my-2.my-md-0.mr-md-3
        a.p-2.text-dark( href="https://minecode.github.io/", target='_blank' ) MineCode
    
    .container
      script( src='./javascripts/script.js' )
      block content

    .container
      footer.pt-4.my-md-5.pt-md-5.border-top
        .row
          .col-12.col-md
            img.mb-2( src="./images/favicon.ico", alt="", width="24", height="24")
            small.d-block.mb-3.text-muted &copy; 2020
          .col-6.col-md
            h5 Features
            ul.list-unstyled.text-small
              li
                a.text-muted( href="#" ) Cool stuff
              li
                a.text-muted( href="#" ) Random feature
              li
                a.text-muted( href="#" ) Team feature
              li
                a.text-muted( href="#" ) Stuff for developers
              li
                a.text-muted( href="#" ) Another one
              li
                a.text-muted( href="#" ) Last time
          .col-6.col-md
            h5 Resources
            ul.list-unstyled.text-small
              li
                a.text-muted( href="#" ) Resource
              li
                a.text-muted( href="#" ) Resource name
              li
                a.text-muted( href="#" ) Another resource
              li
                a.text-muted( href="#" ) Final resource
          .col-6.col-md
            h5 About
            ul.list-unstyled.text-small
              li
                a.text-muted( href="#" ) Team
              li
                a.text-muted( href="#" ) Locations
              li
                a.text-muted( href="#" ) Privacy
              li
                a.text-muted( href="#" ) Terms

